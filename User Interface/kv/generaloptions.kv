<GeneralAuthorOptions>:
    GridLayout:
        rows: 2
        MDToolbar:
            id: toolbar
            title: "Author options"
            md_bg_color: app.theme_cls.primary_color
            background_palette: 'Primary'
            background_hue: '500'
            elevation: 10
            left_action_items: [['arrow-left', lambda x: root.on_back_pressed()]]

        GridLayout:
            orientation: 'vertical'
            padding: [10,0,10,10]
            spacing: 5
            cols: 1
            Magnet:
                transitions: {'pos': 'out_quad', 'size': 'in_expo'}
                duration: 1
                Button:
                    text: "Add new affiliation to the system"
                    on_release:
                        root.show_input_dialog(input_type="new_affiliation", the_title="Add new affiliation")
            Magnet:
                transitions: {'pos': 'out_quad', 'size': 'in_expo'}
                duration: 1
                Button:
                    text: "Add new title to the system"
                    on_release:
                        root.show_input_dialog(input_type="new_title", the_title="Add new title")

            Magnet:
                transitions: {'pos': 'out_quad', 'size': 'in_expo'}
                duration: 1
                Button:
                    text: "Update an existing title"
            Magnet:
                transitions: {'pos': 'out_quad', 'size': 'in_expo'}
                duration: 1
                Button:
                    text: "Update first and last name of existing author"
            Magnet:
                transitions: {'pos': 'out_quad', 'size': 'in_expo'}
                duration: 1
                Button:
                    text: "Update name of existing affiliation"
            Magnet:
                transitions: {'pos': 'out_quad', 'size': 'in_expo'}
                duration: 1
                Button:
                    text: "Delete affiliation from the system"
            Magnet:
                transitions: {'pos': 'out_quad', 'size': 'in_expo'}
                duration: 1
                Button:
                    text: "Delete author from the system"

<GeneralPublicationOptions>:
    GridLayout:
        rows: 2
        MDToolbar:
            id: toolbar
            title: "Publication options"
            md_bg_color: app.theme_cls.primary_color
            background_palette: 'Primary'
            background_hue: '500'
            elevation: 10
            left_action_items: [['arrow-left', lambda x: root.on_back_pressed()]]

        GridLayout:
            orientation: 'vertical'
            padding: [10,0,10,10]
            spacing: 5
            cols: 1
            Magnet:
                transitions: {'pos': 'out_quad', 'size': 'in_expo'}
                duration: 1
                Button:
                    text: "Add new publisher to the system"
                    on_release:
                        root.show_input_dialog(input_type="new_publisher", the_title="Add new publisher")
            Magnet:
                transitions: {'pos': 'out_quad', 'size': 'in_expo'}
                duration: 1
                Button:
                    text: "Add new city to the system"
                    on_release:
                        root.show_input_dialog(input_type="new_city", the_title="Add new city")
            Magnet:
                transitions: {'pos': 'out_quad', 'size': 'in_expo'}
                duration: 1
                Button:
                    text: "Update an existing publisher name"
                    on_release:
                        root.set_menu_for_publisher("update")
                        root.instance_menu_publisher = MDDropdownMenu(\
                        items=root.menu_for_pb, \
                        max_height=dp(260), width_mult=4)
                        root.instance_menu_publisher.open(self)
            Magnet:
                transitions: {'pos': 'out_quad', 'size': 'in_expo'}
                duration: 1
                Button:
                    text: "Update existing city name"
                    on_release:
                        root.set_menu_for_city("update")
                        root.instance_menu_city = MDDropdownMenu(\
                        items=root.menu_for_ct, \
                        max_height=dp(260), width_mult=4)
                        root.instance_menu_city.open(self)
            Magnet:
                transitions: {'pos': 'out_quad', 'size': 'in_expo'}
                duration: 1
                Button:
                    text: "Delete existing city"
                    on_release:
                        root.set_menu_for_city("delete")
                        root.instance_menu_city = MDDropdownMenu(\
                        items=root.menu_for_ct, \
                        max_height=dp(260), width_mult=4)
                        root.instance_menu_city.open(self)
            Magnet:
                transitions: {'pos': 'out_quad', 'size': 'in_expo'}
                duration: 1
                Button:
                    text: "Delete a publisher"
                    on_release:
                        root.set_menu_for_publisher("delete")
                        root.instance_menu_publisher = MDDropdownMenu(\
                        items=root.menu_for_pb, \
                        max_height=dp(260), width_mult=4)
                        root.instance_menu_publisher.open(self)
