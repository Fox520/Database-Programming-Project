<AddAuthorScreen>:
    GridLayout:
        rows: 2
        MDToolbar:
            id: toolbar
            title: "Add new author"
            md_bg_color: app.theme_cls.primary_color
            background_palette: 'Primary'
            background_hue: '500'
            elevation: 10
            left_action_items: [['arrow-left', lambda x: root.on_back_pressed()]]

        GridLayout:
            orientation: 'vertical'
            padding: [10,10,10,10]
            cols: 1
            spacing: 15
            GridLayout:
                rows: 2
                cols: 2
                Button:
                    id: main_button_title
                    text: "Select author title"
                    on_release:
                        root.set_menu_for_author_titles()
                        root.instance_menu_author_titles = MDDropdownMenu(\
                        items=root.menu_for_at, \
                        max_height=dp(260), width_mult=4)
                        root.instance_menu_author_titles.open(self)
                Widget:
                Button:
                    text: "Select affiliation"
                    on_release:
                        root.set_menu_for_affiliations()
                        root.instance_menu_affiliations= MDDropdownMenu(\
                        items=root.menu_for_af, \
                        max_height=dp(260), width_mult=4)
                        root.instance_menu_affiliations.open(self)
                MDTextField:
                    id: custom_affiliation
                    disabled: True
                    hint_text: "Affiliation"

            MDTextField:
                id: first_name
                required: True
                hint_text: "First name"

            MDTextField:
                id: last_name
                required: True
                hint_text: "Last name"

            Button:
                text: "Submit"
                on_release:
                    root.submit_data(main_button_title.text, first_name.text, last_name.text, custom_affiliation.text)
