<AddAuthorScreen>:
    GridLayout:
        rows: 2
        MDToolbar:
            id: toolbar
            title: "Add new author"
            md_bg_color: app.theme_cls.primary_color
            background_palette: 'Primary'
            background_hue: '500'
            elevation: 10
            left_action_items: [['arrow-left', lambda x: root.on_back_pressed()]]
           # right_action_items: [['dots-vertical', lambda x: ""]]
        GridLayout:
            orientation: 'vertical'
            padding: [10,10,10,10]
            cols: 2
            Label:
                text: "[color=ff3333]Title[/color]"
                font_size: 25
                markup: True
            GridLayout:
                cols: 2
                rows: 1
                padding: [0,0,10,0]
                MDFlatButton:
                    id: main_button_title
                    text: "select title"
                    on_release:
                        root.set_menu_for_author_titles()
                        root.instance_menu_author_titles = MDDropdownMenu(\
                        items=root.menu_for_at, \
                        max_height=dp(260), width_mult=4)
                        root.instance_menu_author_titles.open(self)
                MDTextField:
                    id: custom_author_title
                    hint_text: "author title if not listed"
            Label:
                text: "[color=ff3333]First Name[/color]"
                font_size: 25
                markup: True
            MDTextField:
                id: first_name
                hint_text: "First name"

            Label:
                text: "[color=ff3333]Last Name[/color]"
                font_size: 25
                markup: True
            MDTextField:
                id: last_name
                hint_text: "Last name"

            Label:
                text: "[color=ff3333]Affiliation[/color]"
                font_size: 25
                markup: True
            GridLayout:
                cols: 2
                rows: 1
                padding: [0,0,10,0]
                MDFlatButton:
                    id: main_button_affiliation
                    text: "select title"
                    on_release:
                        root.set_menu_for_affiliations()
                        root.instance_menu_affiliations= MDDropdownMenu(\
                        items=root.menu_for_af, \
                        max_height=dp(260), width_mult=4)
                        root.instance_menu_affiliations.open(self)
                MDTextField:
                    id: custom_affiliation
                    hint_text: "affiliation if not listed"
            Button:
                text: "submit"
